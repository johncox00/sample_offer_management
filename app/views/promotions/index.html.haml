- model_class = Promotion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:identifier)
      %th= model_class.human_attribute_name(:start_date)
      %th= model_class.human_attribute_name(:end_date)
      %th= model_class.human_attribute_name(:partner_name)
      %th= model_class.human_attribute_name(:redemption_limit)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:active)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @promotions.each do |promotion|
      %tr
        %td= link_to promotion.identifier, promotion_path(promotion)
        %td= promotion.start_date
        %td= promotion.end_date
        %td= promotion.partner_name
        %td= promotion.redemption_limit
        %td= promotion.type.titleize.split(' ').first
        %td= promotion.active
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_promotion_path(promotion), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), promotion_path(promotion), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_promotion_path, :class => 'btn btn-primary'
