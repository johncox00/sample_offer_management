= form_for @promotion.becomes(Promotion), html: { class: "form form-horizontal promotion" } do |f|
  .form-group
    = f.label :identifier, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :identifier, class: 'form-control', required: true
    = f.error_span(:identifier)
  .form-group
    = f.label :code_length, class: 'control-label col-lg-2'
    .col-lg-2
      = f.number_field :code_length, class: 'form-control', required: true, value: 8
    = f.error_span(:code_length)
    = f.label :code_prefix, class: 'control-label col-lg-2'
    .col-lg-4
      = f.text_field :code_prefix, class: 'form-control', placeholder: '(none)'
    = f.error_span(:code_prefix)
  .form-group
    = f.label :start_date, class: 'control-label col-lg-2'
    .col-lg-4
      .input-group.date.datetimepicker
        = f.text_field :start_date, class: 'form-control', required: true
        %span.input-group-addon
          %span.glyphicon.glyphicon-calendar
    = f.error_span(:start_date)
    = f.label :end_date, class: 'control-label col-lg-2'
    .col-lg-4
      .input-group.date.datetimepicker
        = f.text_field :end_date, class: 'form-control', required: true
        %span.input-group-addon
          %span.glyphicon.glyphicon-calendar
    = f.error_span(:end_date)
  .form-group
    = f.label :partner_name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :partner_name, class: 'form-control'
    = f.error_span(:partner_name)
  .form-group
    = f.label :redemption_limit, class: 'control-label col-lg-2'
    .col-lg-2
      = f.number_field :redemption_limit, class: 'form-control', required: true, value: 1
    = f.error_span(:redemption_limit)
    = f.label :type, class: 'control-label col-lg-2'
    .col-lg-2
      = f.select :type, [[ 'Restricted', 'RestrictedPromotion' ],['Unrestricted', 'UnrestrictedPromotion'],['Exclusive', 'ExclusivePromotion']], {include_blank: false}, {class: 'form-control'}
    = f.error_span(:type)

    = f.label :exclusivity_window, class: 'control-label col-lg-2'
    .col-lg-2
      = f.number_field :exclusivity_window, class: 'form-control', required: true, value: 0
    = f.error_span(:exclusivity_window)
  .form-group
    = f.label :offer_identifier, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :offer_identifier, class: 'form-control', placeholder: '(none)'
    = f.error_span(:offer_identifier)
  .form-group
    = f.label :active, class: 'control-label col-lg-2'
    .col-lg-10
      = #f.text_field :active, class: 'form-control', required: true
      .checkbox
        %label
          = f.check_box :active, checked: true
    = f.error_span(:active)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), promotions_path, :class => 'btn btn-default'

:javascript
  $(function () {
      $('.datetimepicker').datetimepicker();
  });
