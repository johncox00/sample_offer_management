- model_class = PromotionAction
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:promotion_id)
      %th= model_class.human_attribute_name(:amount)
      %th= model_class.human_attribute_name(:billing_description)
      %th= model_class.human_attribute_name(:discount_type)
      %th= model_class.human_attribute_name(:identifier)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:coupon_duration)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @promotion_actions.each do |promotion_action|
      %tr
        %td= promotion_action.promotion_id
        %td= promotion_action.amount
        %td= promotion_action.billing_description
        %td= promotion_action.discount_type
        %td= promotion_action.identifier
        %td= promotion_action.type
        %td= promotion_action.coupon_duration
        %td=l promotion_action.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_promotion_action_path(promotion_action), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), promotion_action_path(promotion_action), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_promotion_promotion_action_path(@promotion), :class => 'btn btn-primary'
