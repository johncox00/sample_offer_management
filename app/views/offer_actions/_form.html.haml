= form_for [@offer, @offer_action], html: { class: "form form-horizontal offer_action", novalidate: true } do |f|
  .form-group
    .col-lg-12
      = @offer.identifier
    = f.error_span(:offer_id)
  .form-group
    = f.label :action_type, class: 'control-label col-lg-2'
    .col-lg-4
      = f.select :action_type, [ 'Plan', 'Future Plan', 'Coupon', 'Package'].map{|x| [x, x.downcase.underscore]}, {include_blank: false}, {class: 'form-control'}
    = f.error_span(:action_type)
  .form-group
    = f.label :action_identifier, class: 'control-label col-lg-2'
    .col-lg-4
      = f.text_field :action_identifier, class: 'form-control', required: true
    = f.error_span(:action_identifier)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), offer_path(@offer), :class => 'btn btn-default'
