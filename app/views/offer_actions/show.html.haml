- model_class = OfferAction
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:offer_id) + ':'
  %br
  = @offer_action.offer_id
%p
  %strong= model_class.human_attribute_name(:action_type) + ':'
  %br
  = @offer_action.action_type
%p
  %strong= model_class.human_attribute_name(:action_identifier) + ':'
  %br
  = @offer_action.action_identifier


= link_to t('.back', :default => t("helpers.links.back")), offer_actions_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_offer_action_path(@offer_action), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), offer_action_path(@offer_action), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
