- model_class = OfferAction
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:offer_id)
      %th= model_class.human_attribute_name(:action_type)
      %th= model_class.human_attribute_name(:action_identifier)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @offer_actions.each do |offer_action|
      %tr
        %td= link_to offer_action.id, offer_action_path(offer_action)
        %td= offer_action.offer_id
        %td= offer_action.action_type
        %td= offer_action.action_identifier
        %td=l offer_action.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_offer_action_path(offer_action), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), offer_action_path(offer_action), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_offer_action_path, :class => 'btn btn-primary'
