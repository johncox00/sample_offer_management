= form_for @offer, html: { class: "form form-horizontal offer" } do |f|
  .form-group
    = f.label :identifier, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :identifier, class: 'form-control', required: true
    = f.error_span(:identifier)
  .form-group
    = f.label :start_date, class: 'control-label col-lg-2'
    .col-lg-4
      .input-group.date.datetimepicker
        = f.text_field :start_date, class: 'form-control', required: true
        %span.input-group-addon
          %span.glyphicon.glyphicon-calendar
    = f.error_span(:start_date)
    = f.label :end_date, class: 'control-label col-lg-2'
    .col-lg-4
      .input-group.date.datetimepicker
        = f.text_field :end_date, class: 'form-control', required: true
        %span.input-group-addon
          %span.glyphicon.glyphicon-calendar
    = f.error_span(:end_date)
  .form-group
    = f.label :offer_type, class: 'control-label col-lg-2'
    .col-lg-2
      = f.select :offer_type, [[ 'Winback', 'winback' ],['Upsell', 'upsell'],['Combo', 'combo'], ['Promo', 'promo']], {include_blank: false}, {class: 'form-control'}
    = f.error_span(:offer_type)
    = f.label :priority, class: 'control-label col-lg-2'
    .col-lg-2
      = f.number_field :priority, class: 'form-control', required: true, value: 1
    = f.error_span(:priority)
    = f.label :durration_in_months, class: 'control-label col-lg-2'
    .col-lg-2
      = f.number_field :durration_in_months, class: 'form-control'
    = f.error_span(:durration_in_months)
  .form-group
    = f.label :active, class: 'control-label col-lg-2'
    .col-lg-10
      .checkbox
        %label
          = f.check_box :active, checked: true
    = f.error_span(:active)

  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), offers_path, :class => 'btn btn-default'

:javascript
  $(function () {
      $('.datetimepicker').datetimepicker();
  });
