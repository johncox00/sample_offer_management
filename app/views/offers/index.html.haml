- model_class = Offer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:identifier)
      %th= model_class.human_attribute_name(:start_date)
      %th= model_class.human_attribute_name(:end_date)
      %th= model_class.human_attribute_name(:offer_type)
      %th= model_class.human_attribute_name(:active)
      %th= model_class.human_attribute_name(:priority)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @offers.each do |offer|
      %tr
        %td= link_to offer.identifier, offer_path(offer)
        %td= offer.start_date
        %td= offer.end_date
        %td= offer.offer_type
        %td= offer.active
        %td= offer.priority
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_offer_path(offer), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), offer_path(offer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_offer_path, :class => 'btn btn-primary'
